# Environment Configuration
APP_ENV=development
APP_DEBUG=true
APP_NAME="Cheche Learning Platform"

# Database Configuration
DB_HOST=your_database_host_here
DB_PORT=3306
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_database_password

# File Storage
UPLOAD_MAX_SIZE=524288000
ALLOWED_VIDEO_EXTENSIONS=mp4,avi,mov,wmv,mkv,webm,flv
UPLOAD_DIR=uploads/videos/

# Session Configuration
SESSION_TIMEOUT=86400
SESSION_SECURE=false
SESSION_HTTPONLY=true

# Security
ENCRYPTION_KEY=your_secret_encryption_key_here_change_this
HASH_SALT=your_unique_salt_here_change_this

# Video Processing
FFMPEG_PATH=/usr/bin/ffmpeg
FFPROBE_PATH=/usr/bin/ffprobe
VIDEO_QUALITY_DEFAULT=720p

# Email Configuration (for future features)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM_ADDRESS=noreply@cheche.com
MAIL_FROM_NAME="Cheche Platform"

# API Keys (add as needed)
# CLOUDINARY_CLOUD_NAME=
# CLOUDINARY_API_KEY=
# CLOUDINARY_API_SECRET=

# Payment Gateway (for future features)
# PAYSTACK_PUBLIC_KEY=
# PAYSTACK_SECRET_KEY=

# Application URLs
APP_URL=http://localhost:8000
FRONTEND_URL=http://localhost:8000

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log